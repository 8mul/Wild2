<div class="articles">
  <% if (complainData.length > 0) { %>
    <h2 class="articles-heading">민원 게시판 검색 결과</h2>
    <table class="article-table search-results">
      <thead>
        <tr>
          <th>번호</th>
          <th>제목</th>
          <th>작성자</th>
          <th>추천수</th>
          <th>작성일</th>
        </tr>
      </thead>
      <tbody>
        <% complainData.forEach((post, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><a href="/post/<%= post.id %>"><%= post.title %></a></td>
            <td><%= post.userId %></td>
            <td><%= post.recommend %></td>
            <td><%= new Date(post.createdAt).toLocaleDateString('ko-KR', { year: 'numeric', month: '2-digit', day: '2-digit' }).replace(/\./g, '.') %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>

  <% if (reportData.length > 0) { %>
